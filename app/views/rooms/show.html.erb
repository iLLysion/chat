<%= turbo_stream_from @room %>
<%= turbo_stream_from [current_user, @room] %>

<div class="flex flex-col h-96 justify-between">
  <div id="chat-container" class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div id="room_<%= @room.id %>_messages" class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <%= turbo_frame_tag :messages do %>
        <%= render partial: 'messages/message', collection: @messages, locals: { user: current_user } %>
      <% end %>

      <%= form_with model: @new_message, data: { controller: "chat", action: "turbo:submit-end->chat#clearInput" } do |f| %>
        <%= f.text_field :body, autofocus: true, required: true, placeholder: "Your message", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        <%= f.hidden_field :room_id, value: @room.id %>
      <% end %>
    </div>
  </div>
</div>
